# Oracle Cloud Configuration
# Copy this file to config.env and fill in your values

# Oracle Cloud OCIDs
TENANCY_ID="ocid1.tenancy.oc1..aaaaaaaa..."
COMPARTMENT_ID="ocid1.compartment.oc1..aaaaaaaa..."  # Or use TENANCY_ID for root compartment
IMAGE_ID="ocid1.image.oc1.iad.aaaaaaaa..."  # Ubuntu ARM image OCID
SUBNET_ID="ocid1.subnet.oc1.iad.aaaaaaaa..."

# Availability Domains (space-separated array)
# Get with: oci iam availability-domain list --compartment-id <your-tenancy-ocid>
AVAILABILITY_DOMAINS=(
    "PddS:US-ASHBURN-AD-1"
    "PddS:US-ASHBURN-AD-2"
    "PddS:US-ASHBURN-AD-3"
)

# SSH Configuration
SSH_KEY_FILE="$HOME/.ssh/id_rsa.pub"

# Instance Configuration
SHAPE="VM.Standard.A1.Flex"
OCPUS=4
MEMORY_GB=24
BOOT_VOLUME_GB=200
INSTANCE_NAME_PREFIX="instance"

# OCI CLI Path (optional, defaults to $HOME/bin/oci)
# OCI="$HOME/bin/oci"

# Log and State Files (optional, defaults to script directory)
# LOG_FILE="$HOME/ocloud/availability.log"
# STATE_FILE="$HOME/ocloud/state"
